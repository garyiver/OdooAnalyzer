{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OdooAnalyzer Config",
            "type": "debugpy",
            "request": "launch",
            "module": "OdooAnalyzer",
            "args": [
                "--dir", "C:\\Odoo\\sh\\src",
                "--output", "OdooAnalyzer\\analysis_results",
                "--cycle-verbosity", "low",
                "--analyze-sharing",
                "--generate-recommendations",
                "--analyze-consolidation"
            ],
            "cwd": "C:/Cursor",
            "env": {
                "PYTHONUNBUFFERED": "1",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Verify",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/__main__.py",
            "args": [
                "--dir", "C:\\Odoo\\sh\\src",
                "--output", "${workspaceFolder}\\analysis_results\\migration",
                "--analyze-migration",
                "--original-dir", "C:\\Odoo\\sh\\src\\user",
                "--new-dir", "C:\\Cursor\\Odoo\\csl_addons\\odoo"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONUNBUFFERED": "1",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
